<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTreeTableView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane onKeyPressed="#handleOnKeyPressed" prefHeight="540.0" prefWidth="1025.0" stylesheets="@theme.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.OverviewController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <top>
            <MenuBar BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#showEmployees" text="Manage employees" />
                        <MenuItem mnemonicParsing="false" onAction="#showSettings" text="Settings" />
                        <MenuItem mnemonicParsing="false" onAction="#close" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                        <MenuItem mnemonicParsing="false" onAction="#showAddEntry" text="New entry" />
                    <MenuItem mnemonicParsing="false" onAction="#deleteRow" text="Delete row" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#showAbout" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </top>
         <bottom>
            <HBox fx:id="hbox" maxHeight="30.0" minHeight="30.0" prefHeight="30.0" prefWidth="200.0" style="-fx-background-color: #71b5ff;" BorderPane.alignment="CENTER">
               <children>
                  <ToggleButton mnemonicParsing="false" onAction="#handleSummary" styleClass="menu-toggle" text="Summary">
                     <toggleGroup>
                        <ToggleGroup fx:id="filterGroup" />
                     </toggleGroup>
                  </ToggleButton>
                  <ToggleButton layoutX="810.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleFinance" styleClass="menu-toggle" text="Finance" toggleGroup="$filterGroup" />
                  <ToggleButton layoutX="849.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleAssets" styleClass="menu-toggle" text="Assets" toggleGroup="$filterGroup" />
                  <ToggleButton layoutX="888.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleHSE" styleClass="menu-toggle" text="HSE" toggleGroup="$filterGroup" />
                  <ToggleButton layoutX="928.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleStakeholders" styleClass="menu-toggle" text="Stakeholders" toggleGroup="$filterGroup" />
                  <ToggleButton layoutX="967.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleAuthorities" styleClass="menu-toggle" text="Authorities" toggleGroup="$filterGroup" />
                  <ToggleButton layoutX="992.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleGrid" styleClass="menu-toggle" text="Grid" toggleGroup="$filterGroup" />
                  <ToggleButton layoutX="994.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleCivil" styleClass="menu-toggle" text="Civil" toggleGroup="$filterGroup" />
                  <ToggleButton layoutX="996.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleInsurance" styleClass="menu-toggle" text="Insurance" toggleGroup="$filterGroup" />
                  <ToggleButton layoutX="559.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleAccounting" styleClass="menu-toggle" text="Accounting" toggleGroup="$filterGroup" />
                  <ToggleButton layoutX="998.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleRevision" styleClass="menu-toggle" text="Revision" toggleGroup="$filterGroup" />
                  <ToggleButton layoutX="999.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleAll" selected="true" styleClass="menu-toggle" text="All" toggleGroup="$filterGroup" />
                  <StackPane alignment="CENTER_LEFT" prefHeight="150.0" prefWidth="150.0" HBox.hgrow="ALWAYS">
                     <children>
                        <TextField fx:id="textField" maxWidth="200.0" prefWidth="150.0" promptText="Search..." StackPane.alignment="CENTER_RIGHT">
                           <StackPane.margin>
                              <Insets left="40.0" />
                           </StackPane.margin>
                        </TextField>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </StackPane>
               </children>
            </HBox>
         </bottom>
         <center>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <JFXTreeTableView fx:id="table" editable="true" onMouseClicked="#showContextMenu" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <columnResizePolicy>
                        <TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </JFXTreeTableView>
               </children>
            </AnchorPane>
         </center>
      </BorderPane>
   </children>
</StackPane>
